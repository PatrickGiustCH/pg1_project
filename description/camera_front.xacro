<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="camera_front_joint" type="fixed">
        <parent link="chassis"/>
        <child link="camera_front_link"/>
        <origin xyz="0.10 0 0.14" rpy="0 0 0"/>
    </joint>

    <link name="camera_front_link">
        <visual>
            <geometry>
                <box size="0.03 0.1 0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>


    <joint name="camera_front_optical_joint" type="fixed">
        <parent link="camera_front_link"/>
        <child link="camera_front_link_optical"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_front_link_optical"></link>



    <gazebo reference="camera_front_link">
        <material>Gazebo/Black</material>

        <sensor name="camera_front" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>30</update_rate>
            <camera>
                <horizontal_fov>1.361</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>1920</width>
                    <height>1080</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>8.0</far>
                </clip>
            </camera>
            <plugin name="camera_front_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>